{
  "expo": {
    "name": "PAZ",
    "slug": "paz",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#0B0B0F",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/icon.png",        // ← Cambió a icon.png
      "resizeMode": "contain",             // ← contain para el logo (centrado)
      "backgroundColor": "#0B0B0F"
    },
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#0B0B0F",
      "translucent": false
    },
    "android": {
      "package": "com.jhoonero.paz",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B0B0F"
      },
      "splash": {
        "image": "./assets/icon.png",      // ← Cambió a icon.png
        "resizeMode": "contain",           // ← contain para centrar el logo
        "backgroundColor": "#0B0B0F"
      }
    },
    "ios": {
      "icon": "./assets/icon.png",
      "splash": {
        "image": "./assets/icon.png",      // ← Cambió a icon.png
        "resizeMode": "contain",           // ← contain para centrar el logo
        "backgroundColor": "#0B0B0F"
      },
      "supportsTablet": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "2473071f-0b00-458a-8501-8959ea99c1b9"
      }
    },
    "plugins": [
      "expo-font"
    ]
  }
}
